<div class="ctc-mb-4 ctc-flex ctc-justify-between ctc-items-center">
    {% block tableTopLeft %}
        <div class="ctc-flex-1 ctc-pr-4">
            {% block filter %}
                {% if 'filters' in options.components %}
                    {% include datatable.componentPath('search') %}
                {% endif %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block tableTopRight %}
        <div>
            <div class="ctc-shadow ctc-rounded-lg ctc-flex">
                {% block columnsDisplay %}
                    {% if 'columnsDisplay' in options.components %}
                        {% include datatable.componentPath('columns') %}
                    {% endif %}
                {% endblock %}

                {% block perPage %}
                    {% if 'perPage' in options.components %}
                        {% include datatable.componentPath('perPageDropdown') %}
                    {% endif %}
                {% endblock %}
            </div>
        </div>
    {% endblock %}
</div>