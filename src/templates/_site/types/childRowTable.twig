<table class="ctc-border-collapse ctc-table-auto ctc-whitespace-no-wrap ctc-bg-white ctc-table-striped ctc-relative">
    <thead>
    <tr>
        {% for column in columns %}
            <th>{{ column.heading }}</th>
        {% endfor %}
    </tr>
    </thead>
    <tbody>
    <template x-for="crow in row.{{ tableHandle }}">
        <tr>
            {% for column in columns %}
                <td class="ctc-border-dashed ctc-border-t ctc-border-gray-200 ctc-p-3">
                    {% if column.templatePath %}
                        {{ column.renderTemplate('crow.' ~ column.handle) | raw }}
                    {% elseif column.isList() %}
                        <span x-html="crow.{{ column.handle }}.label"></span>
                    {% elseif column.isDate() %}
                        <span x-text="dateFormat(crow.{{ column.handle }})"></span>
                    {% else %}
                        <span x-html="crow.{{ column.handle }}"></span>
                    {% endif %}
                </td>
            {% endfor %}
        </tr>
    </template>
    <template x-if="row.{{ tableHandle }}.length===0">
        <tr>
            <td class="ctc-border-dashed ctc-border-t ctc-border-gray-200 ctc-p-3" :colspan="colspan">
                {{ 'No records found' | t('tablecloth') }}
            </td>
        </tr>
    </template>
    </tbody>
</table>