<template x-if="{{ value }}.length>0">
    <template x-for="(user,i) in {{ value }}">
        <span>
          <span x-text="user.data.fullName ? user.data.fullName : user.data.username"></span><template x-if="i<{{ value }}.length-1"><span>,</span></template>
        </span>
    </template>
</template>

